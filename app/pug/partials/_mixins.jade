mixin brabomail(naam, mail)
    if typeof(mail) === 'undefined'
      p
        a(href="mailto:#{naam}@hcbrabo.be") #{naam}
    else
      p
        a(href="mailto:#{mail}@hcbrabo.be") #{naam}
