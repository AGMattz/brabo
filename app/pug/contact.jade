extends partials/layout

block config
  - var pageTitle = "HC Brabo - About"
block content
    section#contact
      .intro
        .textblock
          .title
            h1 Contact
            p Salesianenlaan 90 
            p 2660 Antwerpen
            p: a(href="mailto:info@hcbrabo.be") info@hcbrabo.be
            h2 Mail: <span>functie@hcbrabo.be</span>
          .text
            // +brabomail("Praeses")
            form(name="mail", onsubmit="return false;", method="post")
              input(type="text", name="name" placeholder="Name ..." required)
              input(type="email", name="email" placeholder="E-mail ..." required)
              input(type="textarea", name="text" placeholder="Message ..." required)
              input(type="submit", value="Send")

